<%= form_for Location.new, url: locations_path, method: "POST", remote: true, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :latitude, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :latitude, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :longitude, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :longitude, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-6">
      <div class="checkbox">
        <label>
          <%= f.check_box :public %> Publish this location
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-6">
      <%= f.submit "Save", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
